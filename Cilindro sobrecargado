package MisProgramas;

public class Cilindro {
	private double altura;
	private double radio;
	private CoordenadasCilindro coordenadas;
	/**
	 * @param altura
	 * @param radio
	 */
	public Cilindro(double altura, double radio) {
		this.altura = altura;
		this.radio = radio;
	}
	//Sobrecarga
	/**
	 * @param altura
	 * @param radio
	 * @param coordenadas
	 */
	public Cilindro(double altura, double radio, CoordenadasCilindro coordenadas) {
		this.altura = altura;
		this.radio = radio;
		this.coordenadas = coordenadas;
	}
	/**
	 * @return the altura
	 */
	public double getAltura() {
		return altura;
	}
	/**
	 * @param altura the altura to set
	 */
	public void setAltura(double altura) {
		this.altura = altura;
	}
	/**
	 * @return the radio
	 */
	public double getRadio() {
		return radio;
	}
	/**
	 * @param radio the radio to set
	 */
	public void setRadio(double radio) {
		this.radio = radio;
	}
	public double getVolumenCilindro() {
		double areaBase=Math.PI*radio*radio;
		double volumen=areaBase*altura;
		return(volumen);
	}
	public double getAreaCilindro() {
		double area=altura*radio*2*Math.PI+Math.PI*radio*radio;
		return(area);
	}
	public double getPerimetroCilindro() {
		double perimetro=2*radio*radio*Math.PI;
		return(perimetro);
	}
}
