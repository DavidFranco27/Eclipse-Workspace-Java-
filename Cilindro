package MisProgramas;

public class Cilindro {
	private double base;
	private double altura;
	private double radio;
	/**
	 * @param base
	 * @param altura
	 * @param radio
	 */
	public Cilindro(double base, double altura, double radio) {
		this.base = base;
		this.altura = altura;
		this.radio = radio;
	}
	/**
	 * @return the base
	 */
	public double getBase() {
		return base;
	}
	/**
	 * @param base the base to set
	 */
	public void setBase(double base) {
		this.base = base;
	}
	/**
	 * @return the altura
	 */
	public double getAltura() {
		return altura;
	}
	/**
	 * @param altura the altura to set
	 */
	public void setAltura(double altura) {
		this.altura = altura;
	}
	/**
	 * @return the radio
	 */
	public double getRadio() {
		return radio;
	}
	/**
	 * @param radio the radio to set
	 */
	public void setRadio(double radio) {
		this.radio = radio;
	}
	public double getAreaCilindro() {
		double area=2*base*altura+2*radio*radio*Math.PI;
		return(area);
	}
	public double getPerimetroCilindro() {
		double perimetro=2*radio*radio*Math.PI;
		return(perimetro);
	}
}
